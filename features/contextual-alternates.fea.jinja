lookup BoxContextual {
    lookupflag 0;
        sub @should_box_next @boxable_glyph' by @boxed_glyph;
} BoxContextual;

lookup ModifierContextual {
    lookupflag 0;
        sub @modleft_glyph @moddable_glyph'
            by @modinline_glyph;
        sub @modinline_glyph @moddable_glyph'
            by @modinline_glyph;

        sub @boxed_modleft_glyph @boxed_moddable_glyph'
            by @boxed_modinline_glyph;
        sub @boxed_modinline_glyph @boxed_moddable_glyph'
            by @boxed_modinline_glyph;
        
} ModifierContextual;

lookup ArrowContextual {
    lookupflag 0;
        sub \arrow_left \colon' by \arrow_mid_none;
        sub \arrow_left.boxed \colon.boxed' by \arrow_mid_none.boxed;

        sub \arrow_left \o' by \arrow_mid_circle;
        sub \arrow_left \O' \o' by \arrow_mid_bullseye;

        sub \arrow_mid_none \o' by \arrow_mid_circle;
        sub \arrow_mid_none \O' \o' by \arrow_mid_bullseye;

        sub \arrow_mid_none \colon' by \arrow_mid_none;
        sub \arrow_mid_circle \colon' by \arrow_mid_none;
        sub \arrow_mid_bullseye \colon' by \arrow_mid_none;
        
        sub \arrow_left_circle \colon' by \arrow_mid_none;
        sub \arrow_left_bullseye \colon' by \arrow_mid_none;

} ArrowContextual;

feature calt {
    script DFLT;
        language dflt;
            lookup BoxContextual;
            lookup ModifierContextual;
            lookup ArrowContextual;
    script latn;
        language dflt;
            lookup BoxContextual;
            lookup ModifierContextual;
            lookup ArrowContextual;
} calt;



