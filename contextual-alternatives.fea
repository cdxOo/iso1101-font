@boxingglyph = [ \square_box_left \A.boxed \B.boxed ];
@unboxingglyph = [ \square_box_right ];
@boxedvariant = [ \A.boxed \B.boxed ];
@defaultvariant = [ \A \B ];

lookup BoxingContextual {
    lookupflag 0;
        sub @boxingglyph @defaultvariant' by @boxedvariant;
} BoxingContextual;

feature calt {
    script DFLT;
        language dflt;
            lookup BoxingContextual;
    script latn;
        language dflt;
            lookup BoxingContextual;
} calt;



